<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a FixMyRide!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"/>

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="47dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="8dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Administrar clientes"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Administrar proveedores"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Administrar técnicos"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Administrar servicios"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Generar orden de servicios"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Generar facturas"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Reporte de ingresos"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button8"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="80dp"
            android:text="Reporte de atenciones"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="6dp" />
    </GridLayout>

    <Button
        android:id="@+id/btnAgregarCliente"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:layout_gravity="end"
        android:text="+"
        android:textSize="28sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>
</LinearLayout>