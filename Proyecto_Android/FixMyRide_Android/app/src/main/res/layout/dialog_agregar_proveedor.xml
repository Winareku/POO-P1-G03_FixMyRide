<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identificación"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etIdentificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cédula/RUC"
            android:inputType="number"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del proveedor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etNombreProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo o razón social"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etTelefonoProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de contacto"
            android:inputType="phone"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etDescripcionProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Productos o servicios que ofrece"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:minHeight="100dp"/>
    </LinearLayout>
</ScrollView>